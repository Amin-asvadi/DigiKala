<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_product_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ss.com.bannerslider.views.BannerSlider
            android:id="@+id/imgSliderDETAIL"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            app:defaultIndicators="circle" />

        <LinearLayout
            android:id="@+id/linNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSliderDETAIL"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_share_24" />

            <ImageView
                android:id="@+id/Notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_notifications_24" />


            <ImageView
                android:id="@+id/Favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_favorite_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linProductmatn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linNotify"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:fontFamily="@font/blotusbold"
                android:text="گوشی موبایل سامسونگ مدل-Galaxy A10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Samsung Galaxy A10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nazarVAcmnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linProductmatn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCOMMENT"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawableRight="@drawable/ic_question_answer_24"
                android:fontFamily="@font/bnazanin"
                android:paddingRight="10dp"
                android:text="نظرات کاربران" />

            <Button
                android:id="@+id/btnDETAIL"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawableRight="@drawable/ic_detail_24"
                android:fontFamily="@font/bnazanin"
                android:paddingRight="10dp"
                android:text="مشخصات" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_below="@id/nazarVAcmnt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_lineral">

            <TextView
                android:id="@+id/txtCOLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/txtSErang"
                android:fontFamily="@font/blotusbold"
                android:paddingRight="5dp"
                android:text="رنگ"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txtSErang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/blotusbold"
                android:paddingLeft="5dp"
                android:text="۳ رنگ"
                android:textColor="#9e9e9e"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnRED"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txtCOLOR"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_lineral"
                android:drawableTop="@drawable/ic_baseline_brightness_red_24"
                android:paddingTop="3dp"
                android:text="قرمز" />

            <Button
                android:id="@+id/btnBLUE"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txtCOLOR"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_lineral"
                android:drawableTop="@drawable/ic_baseline_brightness_blue_24"
                android:paddingTop="3dp"
                android:text="آبی" />


            <Button
                android:id="@+id/btnBLACK"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txtCOLOR"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_lineral"
                android:drawableTop="@drawable/ic_baseline_brightness_1_24"
                android:paddingTop="3dp"
                android:text="مشکی" />

            <ImageView
                android:id="@+id/imggranty"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btnBLACK"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_verified_user_24" />

            <TextView
                android:id="@+id/txtgranty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnBLACK"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/blotusbold"
                android:text=" گارانتی 18 ماهه سام سرویس"
                android:textSize="17dp" />

            <view
                android:id="@+id/txtDeviderGARANTY"
                android:layout_width="260dp"
                android:layout_height="1dp"
                android:layout_below="@id/txtgranty"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="#9e9e9e" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtDeviderGARANTY"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dijikalalogo"
                android:id="@+id/dijiLOGO"
                />
            <TextView
                android:id="@+id/forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/furush"
                android:layout_below="@+id/txtDeviderGARANTY"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="95dp"
                />

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_below="@+id/dijiLOGO"
    android:layout_marginLeft="250dp"
    android:layout_marginTop="15dp"
    android:id="@+id/truck"
    android:background="@drawable/ic_bus_24"
    />
<TextView
    android:id="@+id/amadeERSAL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="آماده ارسال از انبار دیجی کالا"
    android:fontFamily="@font/blotusbold"
    android:textSize="20dp"
    android:layout_below="@+id/forosh"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    />
            <view
                android:id="@+id/txtGHEYMAT"
                android:layout_width="260dp"
                android:layout_height="1dp"
                android:layout_below="@id/amadeERSAL"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/PRICE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtGHEYMAT"
                android:text="1.995.000 تومان"
                android:textSize="25dp"
                android:fontFamily="@font/bnazanin"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                />
            <Button
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSHOPPING"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/bnazanin"
                android:layout_marginTop="15dp"
                android:drawableRight="@drawable/ic_shopping_cart"
                android:text="افزودن به سبد خرید"
                android:background="@drawable/border_btnshop"
                android:layout_below="@id/PRICE"
                android:paddingRight="40dp"
                android:layout_alignLeft="@id/PRICE"
                android:layout_alignStart="@id/PRICE"
                />
        </RelativeLayout>

    </RelativeLayout>


</ScrollView>