<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

<ss.com.bannerslider.views.BannerSlider
    android:id="@+id/bannerSlider"
    app:defaultIndicators="circle"
    app:interval="5000"
    android:layout_width="match_parent"
    android:layout_height="150dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/prdgrpuoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/clockview"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:background="#616161"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            />

        <TextView
            android:background="#F5F5F5"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="25dp"
            />

        <TextView
            android:background="#616161"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            />
        <TextView
            android:background="#F5F5F5"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="25dp"
            />
        <TextView
            android:background="#616161"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/shegeft"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/productItemrecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imgb1"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:padding="5dp"
            android:src="@drawable/b1"
            />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/porFroush"
            android:textColor="#009688"
            android:text="پرفروش ترین محصولات"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="#03A9F4"
            android:id="@+id/PorFroushList"
            android:text="لیست کامل"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recPorFroush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/jadidProduct"
            android:textColor="#009688"
            android:text="جدیدترین محصولات"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="#03A9F4"
            android:id="@+id/jadidProductList"
            android:text="لیست کامل"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recjadidTarin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

</ScrollView>